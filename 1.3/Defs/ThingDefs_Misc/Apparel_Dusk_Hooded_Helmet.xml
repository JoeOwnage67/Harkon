<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Dusk Hooded Helmet -->
    <ThingDef ParentName="DF_Helmet" Name="DF_Helmet_Hood">
        <defName>DF_Dusk_Helmet_Hooded</defName>
        <label>Dusk Hooded Helmet</label>
        <description>The Dusk Helmet is a rare and mysterious item. It's extremely sturdy and lightweight, surviving a Titan's fists without a scratch.</description>
        <graphicData>
            <texPath>Things/Apparel/Helmet/Hooded/Dusk_Helmet_UI</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.5</drawSize>
        </graphicData>
        <costStuffCount>25</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <costList>
            <ComponentSpacer>1</ComponentSpacer>
            <Plasteel>40</Plasteel>
        </costList>
        <statBases>
            <WorkToMake>23000</WorkToMake>
            <MaxHitPoints>160</MaxHitPoints>
            <Mass>1.5</Mass>
            <Flammability>0.4</Flammability>
            <ArmorRating_Sharp>1.06</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
            <ArmorRating_Heat>0.54</ArmorRating_Heat>
            <Insulation_Cold>4</Insulation_Cold>
            <Insulation_Heat>2</Insulation_Heat>
            <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.14</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>4</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <wornGraphicPath>Things/Apparel/Helmet/Hooded/Dusk_Helmet</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <tags Inherit = "False">
                <li>RNApparel_ReactiveHelmet_VOIDCloaked</li>                
            </tags>
        </apparel>
        <equippedStatOffsets>
            <ToxicSensitivity>-100</ToxicSensitivity>
            <SocialImpact>0.15</SocialImpact>
        </equippedStatOffsets>
    </ThingDef>

